<h1>Create a New Figure</h1>
<form action="/figures" method="POST">
<label for="figure_name">Figure Name:</label><br>
<input id=":figure_name" type="text" name="figure_name"><br><br>

<label for="title_id">Titles:</label><br>
<% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.name %>"><%= title.name %></input>
<% end %><br><br>
<label for="title_id">Create New Title:</label><br>
<input id="title[name]" type="text" name="title_name"><br><br>

<label for="landmark_id">Landmarks:</label><br>
<% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value=" <%= landmark.id %>" id="<%= landmark.name %>"><%= landmark.name %></input>
<% end %><br><br>
<label for="landmark_id">Create New Landmark:</label><br>
<input id="landmark[name]" type="text" name="landmark_name"><br><br>

<input type=submit value="Create New Figure">
</form>


